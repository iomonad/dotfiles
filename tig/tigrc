# Tig
# Project Page: https://github.com/jonas/tig
# Default RC: https://github.com/jonas/tig/blob/master/tigrc
# Man: http://jonas.nitro.dk/tig/tigrc.5.html

# View settings
set main-view = \
	line-number:yes,interval=5 \
	id:yes \
	date:default \
	author:full \
	commit-title:yes,graph,refs,overflow=no

# UI display settings
set line-graphics = utf-8    # Enum: ascii, default, utf-8

set reference-format = (branch) <tag>

set split-view-width = 60%
