always-display-description true

article-sort-order date-asc
cleanup-on-quit yes
display-article-progress yes
goto-first-unread yes
goto-next-feed no
notify-program notify-send
notify-always yes
notify-format "newsbeuter: finished reload, %f unread feeds (%n unread articles total)"
delete-read-articles-on-quit no

#Custom Bindings
bind-key e open-in-browser-and-mark-read
bind-key a mark-feed-read

# vimlike bindings
unbind-key ^B
bind-key ^B pageup
unbind-key ^F
bind-key ^F pagedown
bind-key k up
bind-key j down
bind-key q quit
bind-key d mark-feed-read
bind-key D mark-all-feeds-read
