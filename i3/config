                focused_workspace    #121212 #101010 #566d17
                active_workspace     #14161A #040404 #999999
                inactive_workspace   #14161A #14161A #56594e
                urgent_workspace     #cd989a #683e3e #2e3436
        }
		status_command i3blocks
}

