Include private/*

Host vgs vgs.42.fr vgse vgse.42.fr vogsphere vogsphere.42.fr vogsphere-exam vogsphere-exam.42.fr
	User vogsphere

VisualHostKey yes
host *
    controlmaster auto
    controlpath ~/.ssh/connections/ssh_%r@%h:%p
    controlpersist  yes
    ForwardX11 no
    IdentityFile ~/.ssh/keys/default_keys
    CheckHostIP yes
	ExitOnForwardFailure yes
	LogLevel VERBOSE
	NoHostAuthenticationForLocalhost yes
	Protocol 2,1
	VisualHostKey yes
	StrictHostKeyChecking ask
	UpdateHostKeys ask
    KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256

Host *.42.fr
     SendEnv LANG LC_*
     StrictHostKeyChecking no
	 #GSSAPIAuthentication yes
	 #GSSAPIDelegateCredentials yes
     PasswordAuthentication yes

Host github.com
    HostName github.com
    user git
    IdentityFile ~/.ssh/keys/github_rsa
    IdentitiesOnly yes
    cipher arcfour

Host gitlab.com
    HostName gitlab.com
    user git
    IdentityFile ~/.ssh/keys/github_rsa
    IdentitiesOnly yes
    cipher arcfour

Host gist.github.com
    user git
    IdentitiesOnly yes
    IdentityFile ~e/.ssh/keys/github_rsa
    cipher arcfour

Host berry
    user root
    hostname 192.168.0.10
    IdentitiesOnly yes
    IdentityFile ~/.ssh/keys/home_key
