#
# file: ~/.xinitrc
#
# X Server configs & hacks
#

#
# X related
#

xrdb -load $HOME/.Xresources &
xset +fp ~/.fonts &
xset fp rehash &
xset r rate 220 60 & # Make input on steroid
xinput disable 10 &
xset +dpms &
xset dpms 0 0 300 &
xset s noblank &
xset b off # Disable bell
wmname LG3D & # Needed for Xmonad
stty -ixon &

#
# Input Related
#

xsetroot -cursor_name left_ptr &
unclutter -idle 2 &
autocutsel -selection clipboard -fork &
autocutsel -s PRIMARY &
setxkbmap us dvorak &
xmodmap ~/.xmodmap &
xcape -e 'Shift_L=Shift_L|parenleft;Shift_R=Shift_R|parenright' & # Space cadet shift

#
# Eye Candy
#

#hsetroot -tile ~/.xres.d/wallpaper/tiled/neck.png -tint "#3d3d3d" &
hsetroot -fill .xres.d/wallpaper/chicago3.jpg
compton -c -t-5 -l-5 -r3 -o.48 &

#
# Extra Software
#

xscreensaver -no-splash &
redshift -O 3100
urxvtd --quiet --opendisplay --fork & # Daemon Terminal
pulseaudio --start -D &
udiskie -N -s &
nm-applet &

#
# Windows manager
#

# exec xmonad
# exec stumpwm
exec fvwm2

#exec dbus-launch i3 > /dev/null
